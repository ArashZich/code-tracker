# Server configuration
PORT=3000
NODE_ENV=development

# MongoDB configuration
MONGODB_URI=mongodb://admin:password@localhost:27017/code-tracker?authSource=admin
MONGO_USER=admin
MONGO_PASSWORD=password

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_key_change_in_production

# Logging
LOG_LEVEL=debug

# CORS Settings
CORS_ORIGIN=*

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Server timeout settings (in milliseconds)
SERVER_TIMEOUT=120000

# Uncomment for production
#NODE_ENV=production
#CORS_ORIGIN=https://your-vscode-extension-domain.com
#LOG_LEVEL=error